{% extends 'base.html.twig' %}

{% block title %}Ã‰diter -{% endblock %}

{% block body %}
<div class="container" style="margin-top:100px">
    <h3 class="text-center text-primary">Modifier</h3>

    <div class="mt-4">
        {{ form_start(form) }}

        <!-- condition pour afficher la photo de la publication-->
        {% if publication.photo is defined and publication.photo is not null %}
        <div class="">
            {{ form_row(form.imageFile, {'attr':{'id':'customFile', 'class':'custom-file-input'}}) }}
        </div>
        {% else %}
        <div class=" ">
            {{ form_row(form.imageFile, {'attr':{'id':'customFile', 'class':'custom-file-input'}}) }}
        </div>
        {% endif %}

        <!-- condition pour afficher la description de la publication-->
        {% if publication.titre is defined and publication.titre is not null %}
        <div class="">
            {{ form_row(form.titre) }}
        </div>
        <div class="">
            {{ form_row(form.description) }}
        </div>
        {% endif %}

        <div class="mt-2">
            {{ form_row(form.contenu|raw, {'attr': {'rows': 4}}) }}
        </div>
        <div class="d-flex justify-content-center mt-2 mb-5">
            <button class="btn btn-primary mr-2">{{ button_label|default('Enregistrer') }}</button>
            <a href="{{ path('accueil') }}" class="btn btn-primary mr-2">Retour</a>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
