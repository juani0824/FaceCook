{% extends 'base.html.twig' %}

{% block title %}Vérification Email{% endblock %}

{% block body %}
    <!-- loader Start
 <div id="loading">
    <div id="loading-center">
    </div>
 </div>-->
    <!-- loader END -->
    <!-- Sign in Start -->
    <section class="sign-in-page">
        <div id="container-inside">
            <div id="circle-small"></div>
            <div id="circle-medium"></div>
            <div id="circle-large"></div>
            <div id="circle-xlarge"></div>
            <div id="circle-xxlarge"></div>
        </div>
        <div class="container p-0">
            <div class="row no-gutters">
                <div class="col-md-6 text-center pt-5">
                    <div class="sign-in-detail text-white">
                        <a class="sign-in-logo mb-2" href="/">
                            <img src="{{ asset(path_images ~ 'logo1.png') }}" class="img-fluid" alt=""
                                 style="height: 70px;">
                            <h2 class="d-flex justify-content-center" style="font-family:'BigJohn';">Face <span
                                        style="font-family:'SlimJoe';">Cook</span></h2>
                        </a>
                        <div class="">
                            <img src="{{ asset(path_images ~ 'cheff.png') }}" class="img-fluid mb-4" alt="cheff">
                        </div>
                        <a class="sign-in-logo mb-5" href="#">
                            <img src="{{ asset(path_images ~ 'Logo_TD_fd_transparent.png') }}" class="img-fluid"
                                 alt=""
                                 style="height: 90px;">
                        </a>
                    </div>
                </div>
                <div class="col-md-6 bg-white pt-5">
                    <div class="sign-in-from">
                        <img src="{{ asset('images/login/mail.png') }}" width="80" alt="oops!">
                        <h1 class="mt-3 mb-4">Success !</h1>

                        <p style="font-size: larger;">
                            Un e-mail a été envoyé contenant un lien sur lequel vous pouvez cliquer pour
                            réinitialiser
                            votre mot de passe.<br>
                            Ce lien expirera dans <span
                                    class="text-primary font-weight-bold"> &nbsp; &nbsp;{{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.</span>

                        </p>
                        <p style="font-size: larger;">Si vous ne recevez pas d'e-mail, veuillez vérifier votre
                            dossier <span class="text-primary"> Courrier indésirable</span> ou</p>
                        <div class="d-flex mb-5" style="float: right;">
                            <a class="btn btn-primary btn-lg mt-3 mr-2"
                               href="{{ path('app_forgot_password_request') }}">Réessayer</a>.
                            <div class="d-inline-block w-100">
                                <a href="{{ path('app_login') }}" class="btn btn-lg btn-primary mt-3">Rétour</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
