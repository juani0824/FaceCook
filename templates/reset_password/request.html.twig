{% extends 'base.html.twig' %}

{% block title %}Vérification Email{% endblock %}

{% block body %}
    <!-- loader Start
      <div id="loading">
         <div id="loading-center">
         </div>
      </div>-->
    <!-- loader END -->
    <!-- Sign in Start -->
    <section class="sign-in-page">
        <div id="container-inside">
            <div id="circle-small"></div>
            <div id="circle-medium"></div>
            <div id="circle-large"></div>
            <div id="circle-xlarge"></div>
            <div id="circle-xxlarge"></div>
        </div>
        <div class="container p-0">
            <div class="row no-gutters">
                <div class="col-md-6 text-center pt-5">
                    <div class="sign-in-detail text-white">
                        <a class="sign-in-logo mb-2" href="/">
                            <img src="{{ asset(path_images ~ 'logo1.png') }}" class="img-fluid" alt=""
                                 style="height: 70px;">
                            <h2 class="d-flex justify-content-center" style="font-family:'BigJohn';">Face <span
                                        style="font-family:'SlimJoe';">Cook</span></h2>
                        </a>
                        <div class="">
                            <img src="{{ asset(path_images ~ 'cheff.png') }}" class="img-fluid mb-4" alt="cheff">
                        </div>
                        <a class="sign-in-logo mb-5" href="#">
                            <img src="{{ asset(path_images ~ 'Logo_TD_fd_transparent.png') }}" class="img-fluid" alt=""
                                 style="height: 90px;">
                        </a>

                    </div>
                </div>
                <div class="col-md-6 bg-white pt-5 d-flex align-items-center justify-content-center">
                    <div class="sign-in-from">
                        <h2 class="mb-5">Réinitialiser le mot de passe</h2>
                        <p class="mb-2" style="font-size: larger;">Entrez votre adresse e-mail et nous vous enverrons un
                            e-mail avec des instructions pour
                            réinitialiser votre mot de passe.
                        </p>
                        <!--Formulaire réinitialisation mot de passe-->
                        {{ form_start(requestForm, {'attr': {'class': 'mt-4'}} ) }}
                        <!-- Alert Reset Password-->
                        {% for flashError in app.flashes('reset_password_error') %}
                            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                        {% endfor %}

                        <div class="form-group">

                            {{ form_row(requestForm.email, {'attr': { 'class': 'form-control mb-0', 'id': 'exampleInputEmail1', 'placeholder':'entrez votre Email'}}) }}
                        </div>

                        <div class="d-inline-block w-100">

                            <button type="submit" class="btn btn-primary float-right">Réinitialiser</button>
                        </div>
                        {{ form_end(requestForm) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
